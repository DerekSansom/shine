<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="com.shine.boards.Report"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link rel="stylesheet" href="${pageContext.request.contextPath}/css/portal_style.css" />

<title>StreetPin Portal</title>
</head> 
<body>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

	<jsp:include page="portalleftsection.jsp"></jsp:include>

	<div id="container-right">

		<div id="header">
			<h1>New brand</h1>
		</div>

		<div id="content">
			<form action="" method="POST">
				<table>
					<tr>
						<td><label for="name">Name</label></td>
						<td><input id="name" name="name" value="" class="inputbox"></td>
					</tr>
					<tr>
						<td><label for="background">Background image</label></td>
						<td>
							<input id="background_upload" name="background_upload" type="file">
							<input type="hidden" id="background" name="background" value="">
						</td>
					</tr>
					<tr>
						<td><label for="logo">Logo image</label></td>
						<td>
							<input id="logo_upload" name="logo_upload" type="file">
							<input type="hidden" id="logo" name="logo" value="">
						</td>
					</tr>
					<tr>
						<td><label for="bgColour">Background colour</label></td>
						<td><input id="bgColour" name="bgColour" value="" class="inputbox hexcol"></td>
					</tr>
					<tr>
						<td><label for="linkColour">Address colour</label></td>
						<td><input id="linkColour" name="linkColour" value="227a24" class="inputbox hexcol"></td>
					</tr>
					<tr>
						<td><label for="textColour">Text colour</label></td>
						<td><input id="textColour" name="textColour" value="000000" class="inputbox hexcol"></td>
					</tr>	
					<!--
					<tr>
						<td><label for="url">Link URL</label></td>
						<td><input id="url" name="url" value="" class="inputbox"></td>
					</tr>
					 -->
					<tr>
						<td></td>
						<td><input type="submit" value="Save" class="btn"></td>
					</tr>
				</table>
			</form>
		</div>
		
		<div id="footer">
			<div id="footer">&copy; Copyright 2014 streetpin</div>
		</div>

	</div>
</body>

</body>
</html>